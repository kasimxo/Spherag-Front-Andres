<!DOCTYPE html>
<html lang="es-ES">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn3.devexpress.com/jslib/23.1.4/css/dx.light.css" rel="stylesheet">
    <link rel="icon" href="https://spherag.com/wp-content/uploads/2024/04/cropped-Icon_spherag-32x32.png" sizes="32x32">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Spherag_frontend_andres.styles.css" asp-append-version="true" />
</head>
<body class="bg-secondary" style="--bs-bg-opacity: .1;">
    <div class="d-flex flex-column flex-shrink-0 shadow float-start mb-auto vh-100 align-items-center p-2 bg-white">
        <img src="static/Icon_spherag.png" class="spherag-logo mb-4" />
        <nav class="nav flex-column justify-content-center  align-items-center">
            <i class="bi bi-microsoft py-1 text-secondary"></i>
            <i class="bi bi-calendar3 py-1 text-secondary"></i>
            <i class="bi bi-tv py-1 text-primary"></i>
            <i class="bi bi-clock py-1 text-secondary"></i>
            <i class="bi bi-geo-alt py-1 text-secondary"></i>
            <i class="bi bi-gear py-1 text-secondary"></i>
        </nav>
    </div>
    <div class="float-top">
        <header class="d-flex flex-row justify-content-between bg-white shadow">
            <div class="d-flex flex-row align-items-center p-2 w-25">
                <i class="bi bi-list px-2"></i>
                <div class="container-fluid">
                    <select class="form-select" aria-label="Selector de terreno" disabled>
                        <option selected>Mi finca</option>
                        <option value="1">Campo 1</option>
                    </select>
                </div>
            </div>
            <div class="d-flex flex-row align-items-center bg-secondary px-4" style="--bs-bg-opacity: .4;border-radius:0px 0px 0px 10px !important;">
                <i class="bi bi-bell py-1 bg-light rounded text-secondary px-2"></i>
                <span b-1r02chcp9r="" class="position-relative top-0 start-0 translate-middle badge rounded-pill bg-danger border border-light">2</span>
                <i class="bi bi-info-circle py-1 bg-light rounded text-secondary me-4 px-2"></i>
                <div class="d-flex flex-row justify-content-start align-items-center bg-light rounded px-2 py-1">
                    <p class="align-middle mb-0"><i class="bi bi-person-circle py-1 text-secondary"></i> correo@correousuario.com</p>
                </div>
            </div>
        </header>
    
        <div class="d-flex">
            <main role="main" class="w-100 p-4" >
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn3.devexpress.com/jslib/23.1.4/js/dx.all.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
